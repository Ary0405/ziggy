generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  username         String         @unique
  password         String
  email            String         @unique
  role             Role
  createdAt        DateTime       @default(now())
  userOrders       Order[]        @relation(name: "UserOrder")
  restaurantOrders Order[]        @relation(name: "RestaurantOrder")
  MenuCategory     MenuCategory[]
  MenuItem         MenuItem[]
  UserCart         Cart[]         @relation(name: "UserCart")
  RestaurantCart   Cart[]         @relation(name: "RestaurantCart")
}

model MenuCategory {
  id           Int        @id @default(autoincrement())
  name         String
  description  String?
  restaurantId Int
  user         User       @relation(fields: [restaurantId], references: [id])
  menuItems    MenuItem[]
}

model MenuItem {
  id           Int          @id @default(autoincrement())
  name         String
  restaurantId Int
  user         User         @relation(fields: [restaurantId], references: [id])
  description  String?
  price        Float
  imageUrl     String?
  categoryId   Int
  category     MenuCategory @relation(fields: [categoryId], references: [id])
  orderItems   OrderItem[]
  Cart         Cart[]
}

model Order {
  id           Int         @id @default(autoincrement())
  userId       Int
  orderTotal   Float
  tableNumber  Int
  restaurantId Int
  user         User        @relation(name: "UserOrder", fields: [userId], references: [id])
  restaurant   User        @relation(name: "RestaurantOrder", fields: [restaurantId], references: [id])
  status       OrderStatus @default(PENDING)
  createdAt    DateTime    @default(now())
  completedAt  DateTime?
  orderItems   OrderItem[]
}

model OrderItem {
  id       Int      @id @default(autoincrement())
  orderId  Int
  order    Order    @relation(fields: [orderId], references: [id])
  itemId   Int
  item     MenuItem @relation(fields: [itemId], references: [id])
  quantity Int
  price    Float
}

model Cart {
  id           Int      @id @default(autoincrement())
  userId       Int
  restaurantId Int
  restaurant   User     @relation(name: "RestaurantCart", fields: [restaurantId], references: [id])
  user         User     @relation(name: "UserCart", fields: [userId], references: [id])
  itemId       Int
  item         MenuItem @relation(fields: [itemId], references: [id])
  quantity     Int
  price        Float
}

enum Role {
  CUSTOMER
  STAFF
}

enum OrderStatus {
  PENDING
  COMPLETED
  DECLINED
}
